@model IEnumerable<DA_Web.ViewModel.NhapKho>

@{
    ViewBag.Title = "LichSuNhapKho";
    Layout = "~/Areas/Admin/Views/Shared/layout_admin.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="row" style="margin-bottom: 10px;text-align:center;display:block">
            <span style="font-size:25px">Lịch sử nhập kho</span>
            <hr style="width: 30%; border: 0.1px solid #00000047;" />
        </div>     

        <div class="table-responsive">

            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Mã nhập kho</th>
                        <th>Mã sản phẩm</th>

                        <th>Tên sản phẩm</th>
                        <th>Mã nhân viên</th>
                        <th>Số lượng</th>
                        <th>Ngày nhập</th>
                       
                        <th >Công cụ</th>
                    </tr>
                </thead>
                <tbody class="table_change">
                    @foreach (var item in Model)
                    {
                        <tr id="row_@item.ID_NHAPKHO">
                            <td>@item.ID_NHAPKHO</td>
                            <td>@item.ID_SANPHAM</td>
                            <td>@item.TENSANPHAM</td>
                            <td>@item.ID_NHANVIEN</td>
                            <td>@item.SoLuong</td>
                            <td>@String.Format("{0:dd/MM/yyyy}", @item.NgayNhap)</td>                                                    
                          
                            <td id="xoa">@Ajax.ImageActionLink("../../Content/image/icon_xoa.png", "Xóa", "Delete", new { @id = @item.ID_NHAPKHO }, new AjaxOptions { Confirm = "Bạn có muốn xóa không?", OnComplete = "$('#row_" + @item.ID_NHAPKHO + "').remove()", HttpMethod = "DELETE" })</td>
                        </tr>
                    }
                </tbody>
            </table>


        </div>
    </div>
</div>