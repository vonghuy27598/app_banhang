    <script src="~/Scripts/controller/baseController.js"></script>
    <script src="~/Scripts/controller/goBack.js"></script>
    @RenderSection("upload", false)

    <script type="text/javascript">
        $('#pictureUpload2').click(function () {
            $('#fileUpload2').trigger('click')
        });
        $('#fileUpload2').change(function () {
            if (window.FormData !== undefined) {
                var fileUpload2 = $('#fileUpload2').get(0);
                var files2 = fileUpload2.files;

                var formData2 = new FormData();
                formData2.append('file', files2[0]);
                $.ajax({
                    type: 'POST',
                    url: '/Display/ProcessUpload',
                    contentType: false,
                    processData: false,
                    data: formData2,

                    success: function (urlImage2) {
                        $('#btn_Change').prop('disabled', false);
                        $('#pictureUpload2').attr('src', urlImage2);

                        $('#picture2').val(urlImage2);
                    },
                    error: function (err) {
                        alert('Có lỗi khi upload ảnh: ' + err.statusText);
                    }
                });
            }
        });

        $('#hoten').change(function () {
            var hoten = $('#hoten');
            if (hoten.length == 0) {
                alert("rỗng")
            }
        });
        $(document).ready(function () {
            $('#capnhat').prop('disabled', true);
            $('#btn_Change').prop('disabled', true);
            $(':input[type="text"]').keyup(function () {
                if ($(this).val() != '') {
                    $('#capnhat').prop('disabled', false);
                } else {
                    $('#capnhat').prop('disabled', true);
                }
            });
            $('#gioitinh').change(function () {
                $('#capnhat').prop('disabled', false);
            });
        });



    </script>
</body>
