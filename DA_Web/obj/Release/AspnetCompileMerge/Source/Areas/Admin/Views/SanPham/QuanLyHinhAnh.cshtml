@model IEnumerable<DA_Web.ViewModel.Product_Full>
@{
    ViewBag.Title = "QuanLyHinhAnh";
    Layout = "~/Areas/Admin/Views/Shared/layout_admin.cshtml";
}

<link href="~/Content/admin/css/modal.css" rel="stylesheet" />

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="form-horizontal">
            <h4>DANH MỤC HÌNH ẢNH PHỤ</h4>
            <div class="row" style="padding-left: 10px;margin-top:10px">
                <a class="addImg">Thêm hình ảnh</a>
            </div>
            <div class="row" style="padding-left: 10px;margin-top:10px">
                @foreach (var item in Model)
                {
                    <div class="col-md-3 col-sm-3 img">
                        <img  id="pictureSuccess_@item.ID_HINHANH" class="img_success" src="@item.HINHANH" data-id="@item.ID_HINHANH" width="100%" height="100%" />
                    </div>
                }
            </div>

        </div>

    </div>
</div>

<div class="image-info">
    <div id="myModal_showIMG" style=" padding-top: 15vh" >

        <!-- Modal content -->
        <div class="modal-content" style="width:30%; height:480px;">
            <div class="modal-header" style="height:7vh; padding-top:5px">

                <h4 style="color:black" class="h4-title">Thay đổi ảnh</h4>
                <span class="close_modalimg">&times;</span>
            </div>
                      
                <div class="modal-body body_changeimg" style="background-color: #d1cfcf; height: 360px;">
                   

                </div>
            <div class="modal-footer">
                <button class="btn btn-danger" id="btn_Delete_img" >Xóa hình</button>
                <button class="btn btn-primary btn_change" id="btn_Change_img">Lưu ảnh</button>
             
            </div>
            

        </div>

    </div>

    </div>
<button id="myBtn_showIMG" hidden="hidden">Open Modal</button>

  
<script src="~/Scripts/controller/getImg.js"></script>
