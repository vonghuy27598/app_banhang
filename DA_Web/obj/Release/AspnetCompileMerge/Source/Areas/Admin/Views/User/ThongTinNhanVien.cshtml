@model DA_Web.ViewModel.NhanVien
@{
    ViewBag.Title = "ThongTinNhanVien";
    Layout = "~/Areas/Admin/Views/Shared/layout_admin.cshtml";
}

<style>
   
</style>
<div class="conten-information">
    <h2>Thông tin nhân viên</h2>
    <div class="card shadow mb-4">
        <div class="card-header py-3">

            <a href="@Url.Action("EditNhanVien", "User", new {id_nv = @Model.ID_NHANVIEN })" style="font-weight:bold;text-decoration:none;color:red">Chỉnh sửa</a>



        </div>
        <div class="card-body">
            <h6 class="m-0 font-weight-bold text-primary" style="text-align:center;margin-bottom:50px!important">Mã nhân viên: @Model.ID_NHANVIEN </h6>
            <div class="row">
                <div class="col-md-2 col-sm-4 img-nv">
                    @if (Model.ANHDAIDIEN != null)
                    {
                        <img id="pictureUpload" src="@Model.ANHDAIDIEN" width="100%" height="100%" />
                    }
                    else
                    {
                        <img id="pictureUpload" src="/Content/img/avatar_null.jpg" width="100%" height="100%" />
                    }
                </div>
                <div class="col-md-8 col-sm-8" style="padding-left: 100px;">
                    <div class="row info-group">
                        <div class="col-md-4 col-sm-4 col-xs-4 text">
                            Họ và tên nhân viên:
                        </div>
                        <div class="col-md-8 col-sm-8 col-xs-8">
                            @Model.HoTen
                        </div>
                    </div>
                    <div class="row info-group">
                        <div class="col-md-4 col-sm-4 col-xs-4 text">
                            Giới tính:
                        </div>
                        <div class="col-md-8 col-sm-8 col-xs-8">
                            @if (Model.GioiTinh == true)
                            {
                                <span>Nam</span>
                            }
                            else
                            {
                                <span>Nữ</span>
                            }

                        </div>
                    </div>
                    <div class="row info-group">
                        <div class="col-md-4 col-sm-4 col-xs-4 text">
                            Số điện thoại:
                        </div>
                        <div class="col-md-8 col-sm-8 col-xs-8">
                            @Model.SDT
                        </div>
                    </div>
                    <div class="row info-group">
                        <div class="col-md-4 col-sm-4 col-xs-4 text">
                            Chức vụ:
                        </div>
                        <div class="col-md-8 col-sm-8 col-xs-8">
                            @Model.Tenloainhanvien
                        </div>
                    </div>
                    <div class="row info-group">
                        <div class="col-md-4 col-sm-4 col-xs-4 text">
                            Tài khoản ngân hàng:
                        </div>
                        <div class="col-md-8 col-sm-8 col-xs-8">
                            @Model.TKBank
                        </div>
                    </div>
                    <div class="row info-group">
                        <div class="col-md-4 col-sm-4 col-xs-4 text">
                            Địa chỉ:
                        </div>
                        <div class="col-md-8 col-sm-8 col-xs-8">
                            @Model.Diachi
                        </div>
                    </div>
                    <div class="row info-group">
                        <div class="col-md-4 col-sm-4 col-xs-4 text">
                            Email
                        </div>
                        <div class="col-md-8 col-sm-8 col-xs-8">
                            @Model.Email
                        </div>
                    </div>
                    <div class="row info-group">
                        <div class="col-md-4 col-sm-4 col-xs-4 text">
                            Skype
                        </div>
                        <div class="col-md-8 col-sm-8 col-xs-8">
                            @Model.Skype
                        </div>
                    </div>
                </div>
            </div>


        </div>

    </div>
</div>
