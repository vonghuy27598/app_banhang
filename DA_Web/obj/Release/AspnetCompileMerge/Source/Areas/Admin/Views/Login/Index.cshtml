@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Areas/Admin/Views/Shared/layout_login_admin.cshtml";
}

<div class="login100-form validate-form">

    <span class="login100-form-title p-b-43" style="font-size:25px;font-weight:bold">
        ĐĂNG NHẬP HỆ THỐNG QUẢN LÝ
    </span>

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)

        <div class="wrap-input100 validate-input" data-validate="Tên đăng nhập không được rỗng">
            <input class="input100" type="text" name="username">
            <span class="focus-input100"></span>
            <span class="label-input100">Tài khoản</span>


        </div>
       
        <div class="wrap-input100 validate-input" data-validate="Mật khẩu không được rỗng">
            <input class="input100" type="password" name="password">
            <span class="focus-input100"></span>
            <span class="label-input100">Mật khẩu</span>
         
        </div>

        <div class="flex-sb-m w-full p-t-3 p-b-32">
            <div class="contact100-form-checkbox">

            </div>


        </div>


        <div class="container-login100-form-btn">
            <button class="login100-form-btn">
                Đăng nhập
            </button>
        </div>
        <div style="text-align:center;margin-top:30px">
            <a href="@Url.Action("Signup")" class="link">
                Tạo tài khoản dành cho quản trị viên
            </a>
        </div>

        <h4 style="color:red;font-weight:bold;text-align:center;margin-top:30px;font-size:15px">@ViewBag.ThongBao</h4>
    }
</div>