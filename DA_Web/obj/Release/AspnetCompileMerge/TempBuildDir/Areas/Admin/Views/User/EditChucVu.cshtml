@model DA_Web.ViewModel.LoaiNV
@{
    ViewBag.Title = "EditChucVu";
    Layout = "~/Areas/Admin/Views/Shared/layout_admin.cshtml";
}

<style>
   
</style>

<div class="card shadow mb-4">
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>SỬA CHỨC VỤ</h4>
                <hr />
                @Html.ValidationSummary(true)


                <fieldset>
                   
                    <div class="row" style="padding-left: 50px;margin-top:10px">
               
                        <div class="col-md-12 col-sm-12 ">
                            <div class="content" style="width:100%;margin:auto">


                                <div class="form-group">
                                    <div class="row">

                                        <div class="col-md-6 text">
                                            @Html.LabelFor(m => m.Tenloainhanvien, new { @class = "control-label col-md-4" })
                                            @Html.TextBoxFor(model => model.Tenloainhanvien)
                                            <span class="space col-md-4"></span>@Html.ValidationMessageFor(model => model.Tenloainhanvien)
                                        </div>

                                        <div class="col-md-6 text">
                                           
                                        </div>
                                    </div>

                                </div>


                               

                                @*-----------------*@

                                <div class="form-group" style="margin-top:35px">
                                    <div class="col-md-offset-2 col-md-10" style="text-align:center;">
                                        <input type="submit" value="Sửa thông tin" class="btn btn-success" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </fieldset>

            </div>
        }
    </div>
</div>

