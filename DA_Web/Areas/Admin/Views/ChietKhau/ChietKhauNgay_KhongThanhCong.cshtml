<script>
    $(document).ready(function () {
        $("#yearPicker").yearpicker({
            year: 2017,
            startYear: 2012,
            endYear: 2030
        });
        offText();
        $('#dropdownlist_takenhanvien').prop("disabled", true);
        $('input[type=radio][name=search_CK]').change(function () {
                if (this.value == 'day') {
                    offText();
                    $("#dayPicker").prop("disabled", false);
                    
                }
                else if (this.value == 'month') {
                    offText();
                    $("#monthPicker").prop("disabled", false);
                }else
                {
                    offText();
                    $("#yearPicker").prop("disabled", false);
                }
                $("#hd_date").text(this.value);
        });
        $('#rd_nv').change(function () {
            var check = $(this).is(':checked');
            if (check) {
                $('#dropdownlist_takenhanvien').prop("disabled", false);
            } else {
                $('#dropdownlist_takenhanvien').prop("disabled", true);
            }
        });
        
    });

   

    function offText()
    {
        $("#dayPicker").prop("disabled", true);
        $("#monthPicker").prop("disabled", true);
        $("#yearPicker").prop("disabled", true);
    }

    function showCT(obj)
    {
        var idnv = obj;
        var value_date = $("#hd_date").text();
        var form = "no_date";
        var d = "";
        if (value_date == 'day') {
            form = "day";
            d = $("#dayPicker").val();
        }
        else if (value_date == 'month') {
            form = "month";
            d = $("#monthPicker").val();
        } else if(value_date == 'year') {
            form = "year";
            d = $("#yearPicker").val();

        }   
        $.ajax({
            url: "ChiTietSoDon_CTV_Fail",
            data: { date: d, idnv: idnv, form: form },
            datatype: "json",
            type: "POST",
            success: function (response) {
                if (response.status != null) {
                    $(".table-ct").find("tr:gt(0)").remove();
                        
                        var contentTable = "";
                        var count = 1;
                        var bcount="";
                        var background = "";
                        $.each(response.status, function () {
                            //var date = this.NgayDatHang;
                            //var nowDate = new Date(parseInt(date.substr(6)));
                            //var result = nowDate.format("dd/mm/yyyy");
                            var hoten_ctv = "";
                            var hoten_kh = "";
                            var lydo = "";
                            var id_nv = "";
                            
                            if(this.HoTen != null)
                            {
                                hoten_ctv = this.HoTen;
                               
                            }
                            if(this.LyDo != null)
                            {
                                lydo = this.LyDo;
                            }
                            if (this.TenKH != null) {
                                if(this.HoTen == null)
                                    hoten_kh = this.TenKH;
                            }
                            if(this.ID_NHANVIEN != null)
                            {
                                id_nv = this.ID_NHANVIEN;
                            }
                            var empty ="";
                            if (bcount != this.ID_DONHANG)
                            {
                                if(count%2 != 0)
                                {
                                    background = "background-color:beige";
                                }else
                                {
                                    background = "";
                                }
                                contentTable += '<tr style="'+background+'" id=row_' + this.ID_DONHANG + '><td>' + count + '</td><td>' + this.TenSanPham + '</td><td>' + this.TuyChon + '</td> <td>' + this.SoLuong + '</td><td>' + formatNumber(this.DonGia, '.', ',') + ' VNĐ</td><td>' + formatNumber(this.TongTien, '.', ',') + ' VNĐ</td><td>' + hoten_ctv + '</td><td>'+id_nv+'</td><td>' + hoten_kh + '</td><td>'+lydo+'</td> </tr>';

                            } else
                            {
                                
                                contentTable += '<tr style="'+background+'" id=row_' + this.ID_DONHANG + '><td>' + "" + '</td><td>' + this.TenSanPham + '</td><td>' + this.TuyChon + '</td> <td>' + this.SoLuong + '</td><td>' + formatNumber(this.DonGia, '.', ',') + ' VNĐ</td><td>' + formatNumber(this.TongTien, '.', ',') + ' VNĐ</td><td>' + hoten_ctv + '</td><td>'+id_nv+'</td><td>' + hoten_kh + '</td><td>'+lydo+'</td> </tr>';
                                count--;
                                if(count%2 != 0)
                                {
                                    background = "background-color:beige";
                                }else
                                {
                                    background = "";
                                }
                                
                            }
                            bcount = this.ID_DONHANG;
                            count++;
                        });
                        $('.table_chitietsodon').append(contentTable);
                   
                }
            }
        });
        $('#myBtn').click();
    }


   


    function show_ck() {
        var value_date = $("#hd_date").text();
        var check = $('#rd_nv').is(':checked');
        if (check)
        {
            if (value_date.length > 0) {
                if (value_date == 'day') {
                    Selected_Day(true);
               

                }
                else if (value_date == 'month') {
                    Selected_Month(true);
                } else {
                    Selected_Year(true);
               
                }
            } else {
                alert("Vui lòng chọn thời gian");
            }
        } else
        {
            if (value_date.length > 0) {
                if (value_date == 'day') {
                    Selected_Day(false);


                }
                else if (value_date == 'month') {
