        function Selected_Month(check) {
            var d = $("#monthPicker").val();
            var idnv = $("#dropdownlist_takenhanvien").val();
            if (!check)
                idnv = 0;
            $.ajax({
                url: "ChietKhauNgay_select_Month_CTV_Fail",
                data: { date: d, idnv: idnv },
                datatype: "json",
